<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- This permission is needed to check for internet connection -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name=".TagKoshaApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TagKosha"
        tools:targetApi="31">

        <!-- Splash Activity is now the LAUNCHER. It's the app's entry point. -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login and Register activities are part of the auth flow. -->
        <!-- They are not exported because only our app should start them. -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false" />

        <!-- MainActivity is where users land after logging in. It's not a launcher. -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

<activity
            android:name=".NoteEditorActivity"
            android:exported="false" />
    </application>

</manifest>